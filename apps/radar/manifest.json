{
  "Name" : "Radar",
  "Version" : "0.0.1",
  "CompatVersion" : "0.0.1",
  "Vendor" : "University of Naples Parthenope",
  "Copyright" : "(C) 2021 The FairWind Team",
  "License" : "Apache 2.0",
  "Category" : "Apps",
  "Description" : "The radar app",
  "Url" : "http://fairwind.uniparthenope.it/",
  "FairWind": {
    "App": {
      "Email": "fairwind@uniparthenope.it",
      "Id": "fairwind.apps.radar",
      "Icon": ":/resources/images/icons/radar_icon.png",
      "Settings": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "name": {
            "fairwind": {
              "widget": "fairwind::ui::settings::Display"
            },
            "type": "string",
            "title": "Name",
            "description": "The boat name"
          },
          "loa": {
            "type": "number",
            "minimum": 0,
            "maximum": 50,
            "title": "Length over all",
            "description": "The over all vessel length",
            "fairwind": {
              "postfix": "meters"
            }
          },
          "vesselType": {
            "type": "number",
            "title": "Vessel type",
            "description": "The vessel kind",
            "fairwind": {
              "domain": [
                { "key": "unknown", "value": 0 },
                { "key": "Sailing Boat", "value": 1, "icon": ":/resources/images/icons/sailingboat_icon.png" },
                { "key": "Power Boat", "value": 2},
                { "key": "Spaceship", "value": 99 }
              ]
            }
          },
          "leisure": {
            "type": "boolean",
            "title": "Leisure boat",
            "description": "Is the vessel a leisure boat?"
          },
          "flagData": {
            "title": "Vessel flag data",
            "description": "Data about vessel registration",
            "type": "object",
            "properties": {
              "nationality": {
                "type": "string",
                "title": "Nationality",
                "description": "Country of registration",
                "enum": ["it", "us", "fr"]
              },
              "registryNumber": {
                "type": "string",
                "title": "Registry",
                "description": "The national registration number"
              },
              "sailNumber": {
                "type": "string",
                "title": "Sail Number",
                "description": "The sail number"
              },
              "homeHarbour": {
                "type": "object",
                "title": "Home Harbour",
                "description": "Data where the vessel is docked",
                "properties": {
                  "name": {
                    "type": "string",
                    "title": "Name",
                    "description": "The name of home harbour"
                  }
                },
                "required": [
                  "homeHarbour"
                ]
              }
            },
            "required": [
              "nationality",
              "registryNumber",
              "sailNumber",
              "homeHarbour"
            ]
          },
          "arrayOfStringsDemo": {
            "title": "Array of Strings",
            "description": "This is a demo of an array if string items",
            "type": "array",
            "items": [
              {
                "default": "This is a string item",
                "type": "string"
              }
            ]
          },
          "arrayOfObjectsDemo": {
            "title": "Array of Objects",
            "description": "This is a demo of an array of object items defined in the Json Schema item key",
            "type": "array",
            "items": [
              {
                "type": "object",
                "properties": {
                  "icon": {
                    "title": "Icon",
                    "description": "An icon stored in the application data",
                    "default": "resources/images/icon/pluto.png",
                    "type": "string"
                  },
                  "name": {
                    "title": "Name",
                    "description": "A name, any name, what's in a name!",
                    "default": "Cpt. Nemo",
                    "type": "string"
                  },
                  "random": {
                    "title": "Random",
                    "description": "A random number generated by the sailor with the panaro device",
                    "type": "integer"
                  }
                },
                "required": [
                  "icon","name"
                ]
              }
            ]
          },
          "arrayOfRefObjectsDemo": {
            "title": "Array of Referenced Objects",
            "description": "This is a demo of an array of object items defined in a reference ($ref)",
            "type": "array",
            "items": {
              "$ref": "#/definitions/refObjectItem"
            }
          }
        },
        "required": [
          "name",
          "loa",
          "vesselType",
          "leisure",
          "flagData",
          "arrayOfStringsDemo",
          "arrayOfObjectsDemo",
          "arrayOfRefObjectsDemo"
        ],
        "definitions": {
          "refObjectItem": {
            "type": "object",
            "properties": {
              "active": {
                "title": "Active",
                "description": "Is this component active?",
                "default": false,
                "type": "boolean"
              },
              "class": {
                "title": "Component type",
                "description": "The type of the component implementing this object",
                "default": "fairwind::layers::DefaultLayer",
                "type": "string",
                "fairwind": {
                  "widget": "fairwind::ui::settings::LayerBrowser"
                }
              },
              "description": {
                "title": "Description",
                "description": "Some details about the later",
                "type": "string",
                "fairwind": {
                  "multiline": true
                }
              },
              "name": {
                "title": "Name",
                "description": "The name of the component",
                "default": "Component Name",
                "type": "string"
              }
            },
            "required": [
              "active",
              "class",
              "name"
            ]
          }
        }
      }
    }
  }
}
